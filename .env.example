# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Gemini Model Selection
# Options: gemini-2.5-flash-lite, gemini-2.5-flash, gemini-2.5-pro
GEMINI_MODEL=gemini-2.5-flash

# Rate Limiting Configuration
# Maximum number of requests per time window
RATE_LIMIT_MAX_PER_MINUTE=10

# Time window for rate limiting in seconds (60 = 1 minute)
RATE_LIMIT_WINDOW_SECONDS=60

# Cache Configuration
# Enable/disable document caching for faster repeated requests
ENABLE_CACHE=true

# Maximum number of cached documents
MAX_CACHE_SIZE=100

# Server Configuration
# Host to bind the server to
HOST=0.0.0.0

# Port to run the server on
PORT=8000
